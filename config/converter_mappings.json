{
  "mode_configurations": {
    "Geometry Mode": {
      "config_directory": "config/geometry/",
      "excel_mapping": "config/geometry/excel_mapping.json",
      "operations": "config/geometry/operations.json",
      "converter_class": "GeometryConverter",
      "supported_operations": ["Tương giao", "Khoảng cách", "Diện tích", "Thể tích", "PT đường thẳng"],
      "input_formats": ["xlsx", "csv"],
      "output_formats": ["xlsx", "csv"],
      "supported_shapes": ["point", "line", "plane", "circle", "sphere"],
      "coordinate_systems": ["2d", "3d"]
    },
    "Equation Mode": {
      "config_directory": "config/equation/",
      "excel_mapping": "config/equation/excel_mapping.json",
      "math_replacements": "config/equation/math_replacements.json",
      "prefixes": "config/equation/prefixes.json",
      "keylog_mapping": "config/equation/keylog_mapping.json",
      "converter_class": "EquationConverter",
      "supported_variables": [2, 3, 4],
      "input_formats": ["xlsx", "csv"],
      "output_formats": ["xlsx", "csv"],
      "supported_equations": ["linear", "quadratic", "system"],
      "max_variables": 4
    },
    "Polynomial Equation Mode": {
      "config_directory": "config/polynomial/",
      "excel_mapping": "config/polynomial/excel_mapping.json",
      "operations": "config/polynomial/operations.json",
      "converter_class": "PolynomialConverter",
      "max_degree": 6,
      "input_formats": ["xlsx", "csv"],
      "output_formats": ["xlsx", "csv"]
    }
  },
  "keylog_converter": {
    "input_formats": ["xlsx", "csv", "json"],
    "output_formats": ["xlsx", "csv"],
    "default_encoding": "utf-8",
    "validation_rules": {
      "required_columns": ["timestamp", "key_data"],
      "optional_columns": ["metadata", "session_id"]
    }
  },
  "shared_configurations": {
    "math_symbols": "config/common/math_symbols.json",
    "modes": "config/modes.json",
    "versions": "config/versions.json"
  },
  "file_templates": {
    "geometry_template": "resources/templates/geometry_template.xlsx",
    "equation_template": "resources/templates/equation_template.xlsx",
    "polynomial_template": "resources/templates/polynomial_template.xlsx"
  },
  "validation_rules": {
    "geometry": {
      "required_columns_vary_by_shape": true,
      "max_entities_per_row": 2,
      "coordinate_validation": true
    },
    "equation": {
      "coefficient_validation": true,
      "max_variables": 4,
      "allow_mathematical_expressions": true
    },
    "polynomial": {
      "max_degree": 6,
      "coefficient_validation": true,
      "allow_complex_coefficients": false
    }
  },
  "metadata": {
    "version": "2.0",
    "description": "Centralized mapping configuration for all converter modes",
    "last_updated": "2025-10-28",
    "structure": "Organized by mode with dedicated config directories"
  }
}