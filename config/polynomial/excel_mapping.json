{
  "polynomial_mapping": {
    "input_format": {
      "description": "Ánh xạ cho đa thức từ Excel input",
      "columns": {
        "polynomial_expression": {
          "excel_column": "Polynomial",
          "required": true,
          "description": "Cột chứa biểu thức đa thức (ví dụ: x^2 + 2x + 1)"
        },
        "variable": {
          "excel_column": "Variable",
          "required": false,
          "description": "Biến của đa thức (mặc định: x)",
          "default": "x"
        },
        "degree": {
          "excel_column": "Degree",
          "required": false,
          "description": "Bậc của đa thức (tự động phát hiện nếu không có)"
        }
      },
      "required_columns": ["Polynomial"],
      "optional_columns": ["Variable", "Degree"]
    },
    "coefficient_format": {
      "description": "Ánh xạ theo hệ số riêng lẻ",
      "max_degree": 6,
      "columns": {
        "a6": {"excel_column": "a6", "description": "Hệ số x^6"},
        "a5": {"excel_column": "a5", "description": "Hệ số x^5"},
        "a4": {"excel_column": "a4", "description": "Hệ số x^4"},
        "a3": {"excel_column": "a3", "description": "Hệ số x^3"},
        "a2": {"excel_column": "a2", "description": "Hệ số x^2"},
        "a1": {"excel_column": "a1", "description": "Hệ số x^1"},
        "a0": {"excel_column": "a0", "description": "Hằng số"}
      },
      "optional_columns": ["a6", "a5", "a4", "a3", "a2", "a1", "a0"]
    }
  },
  "operations": {
    "roots": {
      "description": "Tìm nghiệm của đa thức",
      "supported_degrees": [1, 2, 3, 4]
    },
    "derivative": {
      "description": "Tính đạo hàm của đa thức",
      "order": "Bậc đạo hàm (mặc định: 1)"
    },
    "integral": {
      "description": "Tính tích phân của đa thức",
      "definite": "Tích phân xác định với cận a, b"
    },
    "evaluate": {
      "description": "Tính giá trị đa thức tại một điểm",
      "point_column": "x_value"
    }
  },
  "export": {
    "sheet_name": "PolynomialOutput",
    "columns": [
      "input_polynomial",
      "operation",
      "encoded_result",
      "mathematical_result",
      "status",
      "messages"
    ]
  },
  "validation": {
    "max_degree": 6,
    "allow_complex_coefficients": false,
    "require_valid_polynomial": true
  },
  "metadata": {
    "version": "1.0",
    "mode": "Polynomial Equation Mode",
    "description": "Excel mapping configuration for Polynomial operations",
    "last_updated": "2025-10-28"
  }
}