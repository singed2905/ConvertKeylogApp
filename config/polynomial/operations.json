{
  "supported_operations": {
    "solve_roots": {
      "name": "Giải nghiệm đa thức",
      "description": "Tìm tất cả nghiệm thực và phức của đa thức",
      "max_degree": 4,
      "output_format": "list_of_roots"
    },
    "derivative": {
      "name": "Tính đạo hàm",
      "description": "Tính đạo hàm bậc n của đa thức",
      "parameters": {
        "order": {
          "type": "integer",
          "default": 1,
          "min": 1,
          "max": 6
        }
      },
      "output_format": "polynomial"
    },
    "integral": {
      "name": "Tính tích phân",
      "description": "Tính nguyên hàm hoặc tích phân xác định",
      "types": {
        "indefinite": "Nguyên hàm",
        "definite": "Tích phân xác định"
      },
      "parameters": {
        "lower_bound": {"type": "number", "required_for": "definite"},
        "upper_bound": {"type": "number", "required_for": "definite"},
        "constant": {"type": "number", "default": 0, "description": "Hằng số tích phân"}
      },
      "output_format": "polynomial_or_number"
    },
    "evaluate": {
      "name": "Tính giá trị tại điểm",
      "description": "Tính giá trị của đa thức tại một điểm cụ thể",
      "parameters": {
        "x_value": {
          "type": "number",
          "required": true,
          "description": "Giá trị x để tính f(x)"
        }
      },
      "output_format": "number"
    },
    "factorize": {
      "name": "Phân tích thành nhân tử",
      "description": "Phân tích đa thức thành tích các nhân tử",
      "max_degree": 3,
      "output_format": "factored_form"
    },
    "expand": {
      "name": "Khai triển",
      "description": "Khai triển biểu thức đa thức đã phân tích",
      "input_format": "factored_or_expression",
      "output_format": "polynomial"
    }
  },
  "polynomial_formats": {
    "standard": {
      "description": "Dạng chuẩn: ax^n + bx^(n-1) + ... + c",
      "example": "3x^2 + 2x - 1"
    },
    "coefficient_list": {
      "description": "Danh sách hệ số từ bậc cao đến thấp",
      "example": "[3, 2, -1] cho 3x^2 + 2x - 1"
    },
    "factored": {
      "description": "Dạng phân tích: a(x-r1)(x-r2)...",
      "example": "3(x-1)(x+1/3)"
    }
  },
  "encoding_rules": {
    "variable_symbols": {
      "x": "x",
      "y": "y",
      "t": "t",
      "theta": "q"
    },
    "operation_symbols": {
      "+": "P",
      "-": "M",
      "*": "T",
      "^": "E"
    },
    "special_functions": {
      "sqrt": "S",
      "sin": "J",
      "cos": "K",
      "tan": "L"
    }
  },
  "metadata": {
    "version": "1.0",
    "mode": "Polynomial Equation Mode",
    "description": "Operations configuration for Polynomial Mode",
    "last_updated": "2025-10-28"
  }
}