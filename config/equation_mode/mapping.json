{
    "mappings": [
    {
      "find": "\\|([^|]+)\\|",
      "replace": "q(\\1)0",
      "type": "regex",
      "description": "Trị tuyệt đối |x| → q(x)0"
    },
    {
      "find": "\\log_\\{([^}]+)\\}\\{([^}]+)\\}",
      "replace": "i((\\2),\\1)",
      "type": "regex",
      "description": "Log với base: \\log_{base}{arg} → lo((arg),base)"
    },
    {
      "find": "\\log_\\{([^}]+)\\}\\(([^)]+)\\)",
      "replace": "i(\\2,\\1)",
      "type": "regex",
      "description": "Log với base và ngoặc tròn: \\log_{base}(arg) → lo(arg,base)"
    },
    {
      "find": "\\log(",
      "replace": "i(",
      "type": "literal",
      "description": "Hàm log(x) → lo(x)"
    },
    {
      "find": "log(",
      "replace": "i(",
      "type": "literal",
      "description": "Hàm log không dấu \\ → lo("
    },
    {
      "find": "\\frac\\{([^{}]+)\\}\\{([^{}]+)\\}",
      "replace": "$1a$2",
      "type": "regex",
      "description": "Chuyển phân số \\frac{x}{y} thành dạng x a y"
    },
    {
      "find": "-",
      "replace": "p",
      "type": "literal",
      "description": "Dấu âm (trừ) thành 'p'"
    },
    {
      "find": "x",
      "replace": "[",
      "type": "literal",
      "description": "x thành '['"
    },
    {
  "find": "\\cdot",
  "replace": "O",
  "type": "literal",
  "description": "Dấu nhân LaTeX (\\cdot) thành 'O'"
},

    {
      "find": "/",
      "replace": "P",
      "type": "literal",
      "description": "Dấu chia (/) thành 'P'"
    },
    {
      "find": "\\sqrt{",
      "replace": "s",
      "type": "literal",
      "description": "Hàm sqrt{ có dấu \\ → s("
    },
    {
      "find": "sqrt{",
      "replace": "s",
      "type": "literal",
      "description": "Hàm sqrt{ không dấu \\ → s("
    },
    {
      "find": "\\sqrt(",
      "replace": "s",
      "type": "literal",
      "description": "Hàm sqrt{ có dấu \\ → s("
    },
    {
      "find": "sqrt(",
      "replace": "s",
      "type": "literal",
      "description": "Hàm sqrt{ không dấu \\ → s("
    },
   {
  "find": "\\sin(",
  "replace": "j",
  "type": "literal",
  "description": "Hàm \\sin(x) → j"
},
{
  "find": "\\cos(",
  "replace": "k",
  "type": "literal",
  "description": "Hàm \\cos(x) → k"
},
{
  "find": "\\tan(",
  "replace": "l",
  "type": "literal",
  "description": "Hàm \\tan(x) → l"
},
{
  "find": "sin(",
  "replace": "j",
  "type": "literal",
  "description": "Hàm sin(x) → j"
},
{
  "find": "cos(",
  "replace": "k",
  "type": "literal",
  "description": "Hàm cos(x) → k"
},
{
  "find": "tan(",
  "replace": "l",
  "type": "literal",
  "description": "Hàm tan(x) → l"
},

    {
      "find": "ln(",
      "replace": "h(",
      "type": "literal",
      "description": "Hàm ln(x) → h(x)"
    },
    {
      "find": "}",
      "replace": ")",
      "type": "literal",
      "description": "Ngoặc nhọn đóng } thành )"
    },
    {
      "find": "{",
      "replace": "(",
      "type": "literal",
      "description": "Ngoặc nhọn mở { thành ("
    },
    {
      "find": "^",
      "replace": "^",
      "type": "literal",
      "description": "Dấu mũ ^ giữ nguyên"
    },
    {
      "find": "_",
      "replace": "_",
      "type": "literal",
      "description": "Dấu chỉ số dưới _ giữ nguyên"
    },
    {
      "find": "\\left[",
      "replace": "(",
      "type": "literal",
      "description": "Thay \\left[ → ("
    },
    {
      "find": "\\right]",
      "replace": ")",
      "type": "literal",
      "description": "Thay \\right] → )"
    },
    {
      "find": "\\left(",
      "replace": "(",
      "type": "literal",
      "description": "Thay \\left( → ("
    },
    {
      "find": "\\right)",
      "replace": ")",
      "type": "literal",
      "description": "Thay \\right) → )"
    },
    {
      "find": ",",
      "replace": "q)",
      "type": "literal",
      "description": "Dấu phẩy thành q) cho keylog"
    }
    ]
}